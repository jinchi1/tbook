<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <TextView
                android:id="@+id/txt_new_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="비밀번호 변경하기"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>




        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="23dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="15.5dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20.5dp"
                android:src="@drawable/login_password" />
            <EditText
                android:id="@+id/now_password_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="현재 비밀번호를 입력해 주세요."
                android:textColorHint="#CCCCCC"
                android:textSize="16dp"
                android:layout_marginLeft="14dp"
                android:background="@null"
                android:gravity="bottom"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cacaca"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="13dp"
                android:layout_height="15.5dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20.5dp"
                android:src="@drawable/login_password" />

            <EditText
                android:id="@+id/new_password_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="새 비밀번호를 입력해 주세요"
                android:textColorHint="#CCCCCC"
                android:textSize="16dp"
                android:layout_marginLeft="14dp"
                android:background="@null"
                android:gravity="bottom"
                android:maxLength="30"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cacaca"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="15.5dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20.5dp"
                android:src="@drawable/login_password" />
            <EditText
                android:id="@+id/new_password_confirm_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="새 비밀번호를 확인해 주세요"
                android:textColorHint="#CCCCCC"
                android:textSize="16dp"
                android:layout_marginLeft="14dp"
                android:background="@null"
                android:gravity="bottom"
                android:maxLength="30"
                android:inputType="textPassword"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cacaca"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/chagne_btn"
                android:layout_width="293dp"
                android:layout_height="43dp">

                <TextView
                    android:layout_width="293dp"
                    android:layout_height="43dp"
                    android:background="@drawable/button_border"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:text="변경하기"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>



</LinearLayout>