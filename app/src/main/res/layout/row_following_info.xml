<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="14dp"

    >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="48.5dp"
            android:layout_height="54.5dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="48.5dp"
                android:layout_height="54.5dp"
                android:layout_gravity="center"
                android:src="@drawable/person_grey" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/profile_image_prame_white"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="asdfdsafdsafdsafdsafdsafdsafad"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/introduce_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="asdfdsafdsafdsafdsafdsafdsafad"
                android:textColor="#666666"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/follow_lay"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/my_page_edit"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/follow_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="팔로잉"
                    android:textColor="@android:color/white"
                    android:textSize="9dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>