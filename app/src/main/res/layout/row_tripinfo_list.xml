<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="88dp">

    <com.travelbooks3.android.util.HexagonMaskView
        android:layout_width="81dp"
        android:layout_height="88dp"
        android:src="@drawable/home_partner"
        android:id="@+id/friend_profile_img"
        android:layout_weight="1"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/reply_comment_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="name"
                    android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">
                <TextView
                    android:id="@+id/good"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="like,comment count"
                    android:textSize="15dp"/>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/reply_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="commentcommentcommentcomment"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="time"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="postComment"
                android:textSize="25dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>